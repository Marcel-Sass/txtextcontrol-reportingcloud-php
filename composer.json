{
    "name": "textcontrol/txtextcontrol-reportingcloud",
    "description": "PHP wrapper for ReportingCloud Web API. Authored and supported by Text Control GmbH.",
    "license": "BSD-3-Clause",
    "type": "library",
    "autoload": {
        "psr-4": {
            "TxTextControl\\ReportingCloud\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TxTextControlTest\\ReportingCloud\\": "test/"
        }
    },
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.1",
        "webmozart/assert": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit":"^7.5",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^3.0",
        "smalot/pdfparser": "^0.9",
        "riimu/kit-phpencoder": "^2.3"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs src test --standard=phpcs.xml"
    }
}
